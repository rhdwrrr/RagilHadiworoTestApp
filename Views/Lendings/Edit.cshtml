                <label asp-for="IDLending" class="control-label"></label>
                <input disabled value="@Model.IDLending"  class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="IDCustomer" class="control-label"></label>
                <select disabled class="form-control" asp-items="ViewBag.IDCustomer"></select>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plafond" class="control-label"></label>
                <input asp-for="Plafond" class="form-control" />
                <span asp-validation-for="Plafond" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
