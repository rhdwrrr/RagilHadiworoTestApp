@model IEnumerable<RagilHadiworoApp.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.AccountNo)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDCustomer">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDCustomer">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDCustomer">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
